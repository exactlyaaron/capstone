extends ../shared/template

block content
  #inbox-wrapper
    if(messages)
      each message in messages
        .message-conatiner
          .message-details
            .msg-from
              p From:
              a(href='/users/profile/#{message.fromId}') #{message.fromUserName}
            .msg-reply
              a.fa.fa-reply(href='/messages/new/#{message.fromId}')
            .msg-delete
              form(method='POST', action='/messages/#{message._id}')
                button.msg-delete.fa.fa-trash-o
          .clear
          .message-content
            p= message.message
    if(messages.length === 0)
      h2 You currently have no messages to read
